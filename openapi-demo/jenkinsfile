pipeline {
    tools {
        maven 'Maven 3.5.4'
    }
    agent any
    stages {
        stage('Build') {
            steps {
                git 'https://github.com/matt-awad03/spring-demos.git'
                cd openapi-demo
                sh 'mvn package'
            }
        }
        stage('Test') {
            steps {
                cd openapi-demo
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }
}
